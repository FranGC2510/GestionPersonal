<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.dam.fcojavier.gestionpersonal.controllers.EditarEmpleadosController">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Nombre -->
            <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <!-- Apellido -->
            <Label text="Apellidos:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="apellidoField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <!-- Departamento -->
            <Label text="Departamento:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="departamentoField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <!-- Puesto -->
            <Label text="Puesto:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="puestoField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <!-- Teléfono -->
            <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="telefonoField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <!-- Email -->
            <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

            <!-- Rol -->
            <Label text="Rol:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <ComboBox fx:id="rolComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

            <!-- Estado -->
            <Label text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
            <CheckBox fx:id="activoCheckBox" text="Activo" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK"/>
        <ButtonType fx:constant="CANCEL"/>
    </buttonTypes>
</DialogPane>

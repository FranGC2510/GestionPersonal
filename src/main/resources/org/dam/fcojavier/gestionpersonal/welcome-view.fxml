<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.dam.fcojavier.gestionpersonal.controllers.WelcomeController"
      style="-fx-background-color: white;"
      prefWidth="600">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <!-- Título principal -->
    <Text text="Gestión de Personal"
          style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: #2c3e50;"
          textAlignment="CENTER"
          wrappingWidth="520">
        <VBox.margin>
            <Insets bottom="20.0"/>
        </VBox.margin>
    </Text>

    <!-- Subtítulo -->
    <Text text="Bienvenido a tu sistema de gestión empresarial"
          style="-fx-font-size: 18px; -fx-fill: #7f8c8d;"
          textAlignment="CENTER"
          wrappingWidth="520"/>

    <!-- Contenedor de botones -->
    <VBox alignment="CENTER" spacing="15.0">
        <VBox.margin>
            <Insets top="40.0"/>
        </VBox.margin>

        <!-- Botón de Inicio de Sesión -->
        <Button fx:id="loginButton"
                text="Iniciar Sesión"
                onAction="#handleLoginClick"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 50; -fx-background-radius: 5;"
                maxWidth="300"/>

        <!-- Botón de Registro -->
        <Button fx:id="registerButton"
                text="Registrar Empresa"
                onAction="#handleRegistroClick"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 50; -fx-background-radius: 5;"
                maxWidth="300"/>
    </VBox>

    <!-- Texto explicativo -->
    <Text text="¿Eres una empresa? Regístrate y gestiona tu personal de forma eficiente"
          style="-fx-font-size: 14px; -fx-fill: #27ae60;"
          textAlignment="CENTER"
          wrappingWidth="520">
        <VBox.margin>
            <Insets top="20.0"/>
        </VBox.margin>
    </Text>

    <!-- Texto de pie de página -->
    <Text text="© 2025 Gestión de Personal. Todos los derechos reservados."
          style="-fx-font-size: 12px; -fx-fill: #95a5a6;"
          textAlignment="CENTER"
          wrappingWidth="520">
        <VBox.margin>
            <Insets top="40.0"/>
        </VBox.margin>
    </Text>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="org.dam.fcojavier.gestionpersonal.controllers.GestionTurnosController"
      spacing="20" style="-fx-background-color: #f8f9fa;"
      prefWidth="800" prefHeight="600">

    <!-- Cabecera -->
    <VBox VBox.vgrow="NEVER">
        <!-- Barra principal -->
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #1a237e; -fx-padding: 15 20;">
            <Text text="Gestión de Turnos" style="-fx-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        </HBox>

        <!-- Barra de herramientas -->
        <HBox style="-fx-background-color: #283593; -fx-padding: 10 20;" spacing="15" alignment="CENTER_LEFT">
            <ComboBox fx:id="empleadoComboBox" promptText="Seleccionar empleado"
                      style="-fx-background-color: white;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <DatePicker fx:id="fechaAsignacion" promptText="Seleccionar fecha"
                      style="-fx-background-color: white;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="nuevoTurnoButton" text="Nuevo Turno" onAction="#handleNuevoTurno"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 3;"/>
                <Button text="Asignar" onAction="#handleAsignarTurno"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 3;"/>
            </HBox>
        </HBox>
    </VBox>

    <!-- Contenido principal -->
    <VBox VBox.vgrow="ALWAYS" style="-fx-padding: 20;">
        <!-- Tabla de turnos -->
        <TableView fx:id="turnosTable" VBox.vgrow="ALWAYS"
                  style="-fx-background-radius: 5;-fx-background-color: #f5f5f5;">
            <columns>
                <TableColumn fx:id="descripcionColumn" text="Descripción" prefWidth="200">
                    <style>
                        -fx-alignment: CENTER-LEFT;
                    </style>
                </TableColumn>
                <TableColumn fx:id="horaInicioColumn" text="Hora Inicio" prefWidth="150">
                    <style>
                        -fx-alignment: CENTER;
                    </style>
                </TableColumn>
                <TableColumn fx:id="horaFinColumn" text="Hora Fin" prefWidth="150">
                    <style>
                        -fx-alignment: CENTER;
                    </style>
                </TableColumn>
                <TableColumn fx:id="duracionColumn" text="Duración (h)" prefWidth="100">
                    <style>
                        -fx-alignment: CENTER;
                    </style>
                </TableColumn>
                <TableColumn fx:id="accionesColumn" text="Acciones" prefWidth="150">
                    <style>
                        -fx-alignment: CENTER;
                    </style>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <placeholder>
                <Label text="No hay turnos registrados" style="-fx-text-fill: #000000;"/>
            </placeholder>
        </TableView>
    </VBox>

</VBox>
<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" 
      fx:controller="org.dam.fcojavier.gestionpersonal.controllers.GestionAusenciasController"
      spacing="20" style="-fx-background-color: #f8f9fa;"
      prefWidth="800" prefHeight="600">

    <!-- Cabecera -->
    <VBox VBox.vgrow="NEVER">
        <!-- Barra principal -->
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #1a237e; -fx-padding: 15 20;">
            <Text text="GestiÃ³n de Ausencias" style="-fx-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        </HBox>

        <!-- Barra de herramientas -->
        <HBox style="-fx-background-color: #283593; -fx-padding: 10 20;" spacing="15" alignment="CENTER_LEFT">
            <ComboBox fx:id="empleadoFilterComboBox" promptText="Filtrar por empleado"
                      style="-fx-background-color: white;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <DatePicker fx:id="fechaFilterDatePicker" promptText="Filtrar por fecha"
                        style="-fx-background-color: white;" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            <Button text="Limpiar filtros" onAction="#handleLimpiarFiltros"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 3;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Nueva Ausencia" onAction="#handleNuevaAusencia"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 3;"/>
                <Button fx:id="editarButton" text="Editar" disable="true" onAction="#handleEditarAusencia"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-border-color: white; -fx-border-radius: 3;"/>
                <Button fx:id="eliminarButton" text="Eliminar" disable="true" onAction="#handleEliminarAusencia"
                        style="-fx-background-color: transparent; -fx-text-fill: #ff8a80; -fx-border-color: #ff8a80; -fx-border-radius: 3;"/>
            </HBox>
        </HBox>
    </VBox>

    <!-- Contenido principal -->
    <VBox VBox.vgrow="ALWAYS" style="-fx-padding: 20;">
        <!-- Tabla de ausencias -->
        <TableView fx:id="ausenciasTable" VBox.vgrow="ALWAYS"
                  style="-fx-background-radius: 5;-fx-background-color: #f5f5f5;">
            <columns>
                <TableColumn fx:id="empleadoColumn" text="Empleado" prefWidth="150">
                    <style>
                        -fx-alignment: CENTER-LEFT;
                    </style>
                </TableColumn>
                <TableColumn fx:id="motivoColumn" text="Motivo" prefWidth="250">
                    <style>
                        -fx-alignment: CENTER-LEFT;
                    </style>
                </TableColumn>
                <TableColumn fx:id="fechaInicioColumn" text="Fecha Inicio" prefWidth="120">
                    <style>
                        -fx-alignment: CENTER;
                    </style>
                </TableColumn>
                <TableColumn fx:id="fechaFinColumn" text="Fecha Fin" prefWidth="120">
                    <style>
                        -fx-alignment: CENTER;
                    </style>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <placeholder>
                <Label text="No hay ausencias registradas" style="-fx-text-fill: #000000;"/>
            </placeholder>
        </TableView>
    </VBox>

</VBox>